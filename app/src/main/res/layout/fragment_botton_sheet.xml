<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogoFratment.BottonSheetFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/blanco"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/la1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/imgprevia"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>
                <TextView
                    android:id="@+id/idnombrearchivo"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Detalle de Esto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/la1"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.10dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/id_tvdescargar"
                    android:text="   Descargar"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/id_tvcompartir"
                    android:text="   Compartir"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/id_tvmover"
                    android:text="   Mover"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>