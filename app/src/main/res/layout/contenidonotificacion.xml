<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="85dp"
        android:src="@drawable/circulo"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imagenotificacion_noty"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E4E5E5"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Nombre de la empresa"
            android:textStyle="bold"
            android:id="@+id/titulo_detalle_noty"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:text="contenido de la notificacion"
            android:id="@+id/asuntodetalle_noty"
            />

        <TextView
            android:id="@+id/notify_hora_noty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 h"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

</LinearLayout>